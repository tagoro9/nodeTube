<!DOCTYPE html>
<html lang="es">
<head>
	<title>nodeTube - express yourself</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<%- css('modern') %>
	<%- css('modern-responsive') %>
	<%- css('application') %>
	<%- css('video-js') %>
	<%- css('facebox') %>
	<script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
	<%- js('facebox') %>
	<%- js('video') %>
	<%- js('application') %>
</head>
<body class="bg-color-blue">
	<header class="page">
		<div class="nav-bar bg-color-blueDark">
			<div class="nav-bar-inner padding20">
				<span class="pull-menu"></span>
				<a href="/">
					<span id="logo" class="element brand">
						nodeTube
						<small> express yourself</small>
					</span>
				</a>
			</div>
		</div>
	</header>
	<article class="grid padded">
		<section class="row">
			<div id="player" class="span6">
				<video id="video_box" class="video-js vjs-default-skin" controls
						preload="auto" autoplay width="854" height="480" data-setup="{}">
						<source src="/video/1" type='video/mp4'/>
				</video>			
			</div>
			<section class="videos span6 offset5">
				<% for (var key in videos) {
					video = videos[key] %>
					<div class="tile image" data-url="video/<%=key%>" data-mime="<%=videos[key]['mime']%>">
						<div class="tile-content">
							<img src="/posters/<%=video['poster']%>">
						</div>
						<div class="brand bg-color-purple">
							<p class="text"><%=video['title']%></p>
						</div>
					</div>
				<% } %>							
			</section>
		</section>
	</article>
	<footer>
		<div class="nav-bar bg-color-blueDark">
			<div class="nav-bar-inner padding10">
				<span class="element">
					<time>2012</time> Sistemas y tecnologías web - Víctor Mora Afonso
				</span>
			</div>
		</div>
	</footer>
</body>
</html>