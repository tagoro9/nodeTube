<!DOCTYPE html>
<html lang="es">
<head>
	<title>nodeTube - express yourself</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<%- css('modern') %>
	<%- css('modern-responsive') %>
	<%- css('application') %>
	<%- css('video-js') %>
	<%- css('facebox') %>
	<script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
	<%- js('facebox') %>
	<%- js('video') %>
	<%- js('application') %>
</head>
<body class="bg-color-blueDark">
	<header class="page">
		<div class="nav-bar bg-color-darken">
			<div class="nav-bar-inner padding20">
				<span class="pull-menu"></span>
				<a href="/">
					<span id="logo" class="element brand">
						nodeTube
						<small> express yourself</small>
					</span>
				</a>
			</div>
		</div>
	</header>
	<article class="padded grid">
		<section class="row">
			<div id="player" class="span6 offset1">
				<video id="video_box" class="video-js vjs-default-skin" controls
						preload="auto" autoplay width="640" height="360" poster="my_video_poster.png" data-setup="{}">
						<source src="/video/1" type='video/mp4'/>
				</video>			
			</div>
			<section class="videos span6 offset2">
				<div class="tile image" data-url="video/1">
					<div class="tile-content">
						<img src="/truhan.png">
					</div>
					<div class="brand bg-color-yellow">
						<p class="text">Título del video</p>
					</div>
				</div>
				<div class="tile image" data-url="video/2">
					<div class="tile-content">
						<img src="">
					</div>
					<div class="brand bg-color-yellow">
						<p class="text">Título del video</p>
					</div>
				</div>	
				<div class="tile image">
					<div class="tile-content">
						<img src="">
					</div>
					<div class="brand bg-color-yellow">
						<p class="text">Título del video</p>
					</div>
				</div>
				<div class="tile image">
					<div class="tile-content">
						<img src="">
					</div>
					<div class="brand bg-color-yellow">
						<p class="text">Título del video</p>
					</div>
				</div>				
			</section>
		</section>
	</article>
	<footer>
		<div class="nav-bar bg-color-darken">
			<div class="nav-bar-inner padding10">
				<span class="element">
					<time>2012</time> Sistemas y tecnologías web - Víctor Mora Afonso
				</span>
			</div>
		</div>
	</footer>
</body>
</html>